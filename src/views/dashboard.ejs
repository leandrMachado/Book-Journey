          );

          await typing_(
            `Get ready for an unforgettable adventure <span><%=username%></span>! Choose how you want to start:`
          );

          typingOptions_(
            'New Game: <span>Start a new journey full of challenges.</span>',
            () => {
              window.location.href = "/auths/google"
            }
          );

          typingOptions_(
            'Exit: <span>Return when you`re ready to continue.</span>',
            () => {
              window.location.href = "/auths/google/logout"
            }
          );

        }
      )();
  </script>

