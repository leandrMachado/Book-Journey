<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@<%=username%> ~</title>
    <link rel="icon" href="/assets/flask_big_blue.png" type="image/x-icon" />
    <link rel="stylesheet" href="/assets/styles.css" />
  </head>
  <body>
    <section class="terminal"></section>
    <br>
    <div class="bash-command" style="flex-direction: column;"></div>

    <script src="/scripts/events.controller.js"></script>
    <% if (hasSaveGame) { %>
      <script>
        (
          async () => {
            typingOptions_(
              'Continue: <span>Resume your adventure from where you left off.</span>',
              () => {
                window.location.href = "/auths/google"
              }
            );
          }
        )();
      </script>
    <% } %>
    <script>
      (
        async () => {
          await typing_(
